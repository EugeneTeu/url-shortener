{
      "include": ["*"],
    "exclude": ["./build", "./tests/", "./node_modules/", "./client"],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
      "rootDir": "./",
        "outDir": "./build",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true
    
  },
}